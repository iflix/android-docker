{
  "agent": {
    "stack": "iflix-elastic-ci"
  },
  "steps": [
    {
      "name": "docker_build",
      "image": "android"
    },
    {
      "name": "docker_tag",
      "image": "android",
      "force": true,
      "oldTag": "latest",
      "newTag": "${BUILDKITE_BRANCH}-${BUILDKITE_BUILD_NUMBER}"
    },
    {
      "name": "ecr_create_repo",
      "repositoryName": "android"
    },
    {
      "name": "docker_push",
      "image": "android"
    },
    {
      "name": "docker_push",
      "image": "android",
      "tag": "${BUILDKITE_BRANCH}-${BUILDKITE_BUILD_NUMBER}"
    }
  ]
}
